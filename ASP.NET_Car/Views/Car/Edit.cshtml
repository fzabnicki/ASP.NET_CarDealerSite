@model Cars

@{
    var car = ViewBag.Car;
}
<h1>Add new Car</h1>
<form method="post" asp-action="EditCar">
    <div class="mb-3">
        <input asp-for="ID" hidden value="@car.ID" />
        <label asp-for="Brand" class="form-label"></label>
        <div>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <input asp-for="Brand" class="form-control" placeholder="Brand of the car" value="@car.Brand">
    </div>
    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <input asp-for="Model" class="form-control" placeholder="Model of the car" value="@car.Model">
    </div>
    <div class="mb-3">
        <label asp-for="ProductionDate" class="form-label"></label>
        <div>
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>
        <input type="date" asp-for="ProductionDate" class="form-control" placeholder="Production year of the car" value="@car.ProductionDate">
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <input asp-for="Price" class="form-control" placeholder="Price of the car" value="@car.Price">
    </div>
    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Edit Car" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
            </div>
        </div>
    </div>
</form>